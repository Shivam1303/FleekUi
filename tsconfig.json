{
    "compilerOptions": {
      "target": "es5",
      "lib": ["dom", "es2017"],
      "module": "commonjs",
      "jsx": "react",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "declaration": true,
      "outDir": "dist",
      "rootDir": "src"
    },
    "include": ["packages/*/src"]
  }
  